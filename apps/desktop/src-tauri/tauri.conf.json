{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "GlazeBot",
  "version": "0.0.1",
  "identifier": "gg.glazebot.desktop",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev:frontend",
    "beforeBuildCommand": "pnpm build:frontend"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "GlazeBot",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      },
      {
        "label": "overlay",
        "title": "GlazeBot Overlay",
        "url": "/overlay",
        "transparent": true,
        "shadow": false,
        "decorations": false,
        "alwaysOnTop": true,
        "maximized": true,
        "resizable": false,
        "skipTaskbar": true,
        "visible": false,
        "focus": false
      },
      {
        "label": "tray-menu",
        "title": "",
        "url": "/tray-menu",
        "transparent": true,
        "shadow": false,
        "decorations": false,
        "resizable": false,
        "skipTaskbar": true,
        "visible": false,
        "alwaysOnTop": true,
        "width": 240,
        "height": 220,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/ggml-tiny.en.bin"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
