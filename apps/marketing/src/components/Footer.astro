---
const year = new Date().getFullYear();

const columns = [
  {
    title: 'Product',
    links: [
      { label: 'Desktop App', href: 'https://app.glazebot.gg' },
      { label: 'Discord Bot', href: '#' },
      { label: 'Pricing', href: '#pricing' },
    ],
  },
  {
    title: 'Legal',
    links: [
      { label: 'Privacy Policy', href: '/privacy' },
      { label: 'Terms of Service', href: '/terms' },
    ],
  },
  {
    title: 'Social',
    links: [
      { label: 'Discord', href: '#' },
      { label: 'Twitter', href: '#' },
      { label: 'GitHub', href: '#' },
    ],
  },
];
---

<footer class="relative z-10 border-t border-[var(--glass-border)] py-16 bg-[var(--color-navy)]">
  <div class="max-w-7xl mx-auto px-6 sm:px-10 lg:px-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <!-- Logo column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-3 no-underline mb-4">
          <img src="/icon.png" alt="GlazeBot" class="w-8 h-8 rounded-lg" />
          <span class="font-display text-lg tracking-wider text-[var(--color-pink)]">GLAZEBOT</span>
        </a>
        <p class="text-sm text-[var(--color-text-muted)] max-w-xs">
          AI characters that watch you game and commentate in real time.
        </p>
      </div>

      <!-- Link columns -->
      {columns.map((col) => (
        <div>
          <h4 class="text-sm font-semibold text-[var(--color-text-primary)] mb-4 uppercase tracking-wider">
            {col.title}
          </h4>
          <ul class="space-y-2.5">
            {col.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text-secondary)] transition-colors no-underline"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="border-t border-[var(--glass-border)] pt-8 text-center">
      <p class="text-sm text-[var(--color-text-muted)]">
        &copy; {year} GlazeBot. All rights reserved.
      </p>
    </div>
  </div>
</footer>
