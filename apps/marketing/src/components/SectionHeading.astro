---
interface Props {
  title: string;
  subtitle?: string;
}
const { title, subtitle } = Astro.props;
---

<div class="text-center mb-12 md:mb-16">
  <h2 class="font-display text-3xl md:text-4xl lg:text-5xl tracking-wide text-[var(--color-text-primary)] mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class="text-lg md:text-xl text-[var(--color-text-secondary)] max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
</div>
